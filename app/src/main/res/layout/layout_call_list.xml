<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageprofilecall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/holderimage"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNamecontactocall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Contacto"/>
            <ImageView
                android:id="@+id/calltype"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_call_24"
                app:tint="@color/pro" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/EntranteOSaliente"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_call_made_24"
            android:scaleType="center"
            app:tint="@color/verde"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/txtcalldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#2E2E2E"
            android:text="15/01/2021 20:32"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>